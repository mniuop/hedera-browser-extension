{
    "manifest_version": 2,
    "name": "Hedera Browser Extension",
    "short_name": "Hedera",
    "version": "0.9.32",
    "description": "This extension makes micropayments from your Hedera account",
    "icons": {
        "128": "icons/Ext-Icon-Configured-128x128.png",
        "48": "icons/Ext-Icon-Configured-48x48.png",
        "32": "icons/Ext-Icon-Configured-32x32.png",
        "16": "icons/Ext-Icon-Configured-16x16.png"
    },
    "default_locale": "en",
    "browser_action": {
        "default_icon": "icons/Ext-Icon-Configured-16x16.png",
        "default_popup": "html/account-overview.html"
    },
    "applications": {
  	"gecko": {
    		"id": "hhhext@ric.hh",
   		 "strict_min_version": "60.0"
 	 }
	},
    "background": {
        "scripts": ["javascript/background.js"],
        "persistent": false     # Needs fixing for Firefox
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["javascript/content.js"]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "contextMenus",
        "activeTab",
        "cookies",
        "http://127.0.0.1/*",
        "http://localhost:3000/*",
        "http://localhost:8000/*",
        "http://localhost:8080/*",
        "http://localhost:8099/*",
        "http://localhost:9000/*",
        "https://localhost:8443/*",
        "https://localhost:2053/*",
        "http://localhost:9090/*",
        "http://*.dailytimestamp.com/*",
        "https://*.dailytimestamp.com/*",
        "http://*.thetimesta.mp/*",
        "https://*.thetimesta.mp/*",
        "http://*.hash-hash.info/*",
        "https://*.hash-hash.info/*"
    ],
    "web_accessible_resources": ["html/banner.html", "icons/icon16.png"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
